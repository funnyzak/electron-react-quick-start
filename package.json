{
  "name": "electron-react-typescript-webpack",
  "version": "1.0.0",
  "description": "electron-react-typescript-webpack",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development node ./config/dev.js",
    "dist": "cross-env NODE_ENV=production node ./config/build.js",
    "build:now":"cross-env electron-builder",
    "build": "cross-env NODE_ENV=production node ./config/build.js && electron-builder",
    "build:windows": "cross-env NODE_ENV=production node ./config/build.js && electron-builder --win",
    "build:mac": "cross-env NODE_ENV=production node ./config/build.js && electron-builder --mac",
    "build:linux": "cross-env NODE_ENV=production node ./config/build.js && electron-builder --linux",
    "lint": "eslint --fix ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funnyzak/electron-react-typescript-webpack.git"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "webpack"
  ],
  "author": "funnyzak <silenceace@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/funnyzak/electron-react-typescript-webpack/issues"
  },
  "homepage": "https://github.com/funnyzak/electron-react-typescript-webpack#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.4.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.4.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "lint-staged": "^11.2.3",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass-loader": "^12.2.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.3.1",
    "stylelint": "^13.13.1",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-dashboard": "^3.3.6",
    "webpack-dev-server": "^4.3.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint  --fix --cache"
    ]
  },
  "build": {
    "appId": "github.funnyzak.electron",
    "productName": "electron app",
    "copyright": "copyright Â© 2021 eric ",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "public/icon/128x128.icns",
      "category": "Utility"
    },
    "win": {
      "icon": "public/icon/256x256.ico"
    },
    "linux": {
      "target":"zip",
      "category": "Utility",
      "icon": "public/icon/128x128.ico"
    }
  },
  "dependencies": {
    "core-js": "^3.18.3"
  }
}
